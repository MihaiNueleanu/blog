<section class="content-block" id="Skills">
  <div class="container">
    <h1 class="text-center margin-zero">
      <span class="lnr lnr-code"></span>
    </h1>
    <h2 class="headline-strike"><span>Skills</span></h2>

    {% for key, items in skills %}
    <div class="row general">
      <div class="col-3">
        <h5>{{ key }}</h5>
      </div>
      <div class="col-9">
        {% for item in items %}
        <span class="tech">#{{ item }}</span>
        {% endfor %}
      </div>
    </div>
    {% endfor %}

    <br />
    <em class="hide-print">
      Note: These are only the highlights, not the full scope of all the skills
      I've acquired over time. I've only included tools and practices I'm
      absolutely confident in.
    </em>

    <div class="separator hide-print"></div>

    <div class="row more hide-print">
      <div class="col-6">
        <h3>Languages</h3>
        {% for key, value in languages %}
        <div class="row">
          <div class="col-4">
            <b>{{ key }} </b>
          </div>
          <div class="col-8">{{ value }}</div>
        </div>
        {% endfor %}
      </div>
      <div class="col-6">
        <h3>Goals</h3>
        <ul>
          {% for item in goals %}
          <li>{{ item }}</li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <br class="hide-print" />
    <br class="hide-print" />
    <br class="hide-print" />
    <br class="hide-print" />
  </div>
</section>
